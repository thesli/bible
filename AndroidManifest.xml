<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.bible"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="16"/>
    <application android:label="@string/app_name" android:icon="@drawable/scripture">
        <activity android:name="main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ListAll"
                  android:label="This is the List Intent">
            <intent-filter>
                <action android:name="android.intent.action.OTHER"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="favlist"
                  android:label="This is the favlist Intent">
            <intent-filter>
                <action android:name="android.intent.action.OTHER2"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="fb"
                android:label="Share on Facebook"></activity>
        <activity android:name="fav"
                  android:label="Add Favourite"></activity>
        <activity android:name="favlist2"
                  android:label="favouritelist"></activity>
    </application>
</manifest>
